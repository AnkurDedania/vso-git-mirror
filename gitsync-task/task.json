{
    "id": "36CBB8F8-6F18-4B55-BDD7-3ECF87044B08",
    "name": "gitsync",
    "friendlyName": "Git Sync",
    "description": "Sync's one Git repository with another",
    "helpMarkDown": "[More Information](https://github.com/nkdAgility/vsts-gitsync-task#readme)",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Martin Hinshelwood",
    "version": {
        "Major": #{GitVersion.Major}#,
        "Minor": #{GitVersion.Minor}#,
        "Patch": #{GitVersion.Patch}#
    },
    "minimumAgentVersion": "1.92.0",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "GitRepoUrl",
            "type": "string",
            "label": "Git Repository URL",
            "defaultValue": "https://:$(securityToken)@youraccount.visualstudio.com/_git/your-git-repo",
            "required": true,
            "helpMarkDown": "Enter the full URL of the Git repo that you want to connect to including any authentication."
        }
    ],
    "instanceNameFormat": "Sync Git Repo to $(account)",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\gitsync.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(System.DefaultWorkingDirectory)"
        }
    }
}